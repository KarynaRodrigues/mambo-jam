---
const { casa, ano, valor } = Astro.props
---

<section>
    <div>
        IMAGEM
    </div>
    <h3>{casa} ({ano})</h3>
    <h2>R$ {valor},00</h2>
</section>

<style>
    section {
        border: 1px solid rgb(218, 218, 172);
    }

    div{
        background-color: black;
        display: block;
        color: #fff;
        font-size: 12px;
        text-transform: uppercase;
        height: 250px;

    }

    h3 {
        color: darkmagenta;
    
    }

    h2 {
        color: #011;
    }
</style>